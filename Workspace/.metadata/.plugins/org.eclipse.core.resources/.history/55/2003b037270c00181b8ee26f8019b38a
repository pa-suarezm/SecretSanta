package controller;

import logic.SecretSantaManager;
import logic.exceptions.*;

public class Controller {

	//-------------------------------------------
	//Atributos
	//-------------------------------------------
	
	private static SecretSantaManager manager = new SecretSantaManager();
	
	//------------------------------------------
	//Metodos
	//------------------------------------------
	
	public static void sort() throws KeyNotFoundException{
		manager.sort();
	}
	
	public static void sendEmails() throws Exception{
		manager.sendEmails();		
	}
}
