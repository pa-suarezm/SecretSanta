package view;

import java.awt.BorderLayout;
import java.awt.*;
import java.awt.event.*;

import javax.swing.*;
import javax.swing.border.*;

public class PanelCambios extends JPanel implements ActionListener{
	
	//----------------------------------------------
	//Constantes
	//----------------------------------------------
	
	private static final long serialVersionUID = -1832480415066768485L;

	public static final String SORT = "SORT";
	
	public static final String SEND = "SEND";
	
	public static final String SAVE = "SAVE";

	//----------------------------------------------
	//Atributos
	//----------------------------------------------
	
	private SecretSantaUI inter;
	
	private JButton btnSort;
	
	private JButton btnSend;
	
	private JButton btnSave;
	
	//----------------------------------------------
	//Constructor
	//----------------------------------------------
	
	public PanelCambios(SecretSantaUI pInter){
		inter = pInter;
		
		TitledBorder border = BorderFactory.createTitledBorder("Administrar Participantes");
		border.setTitleColor(Color.BLUE);
		setBorder(border);
		
		setLayout(new GridLayout(1,5));
		
		btnSave = new JButton("Guardar");
		btnSave.addActionListener(this);
		btnSave.setActionCommand(SAVE);
		add(BorderLayout.WEST, btnSave);
		
		btnSort = new JButton("Asignar");
		btnSort.addActionListener(this);
		btnSort.setActionCommand(SORT);
		add(BorderLayout.EAST, btnSort);
		
		btnSend = new JButton("Enviar correos");
		btnSend.addActionListener(this);
		btnSend.setActionCommand(SEND);
		add(BorderLayout.CENTER, btnSend);
	}
	
	//----------------------------------------------
	//Metodos
	//----------------------------------------------
	
	@Override
	public void actionPerformed(ActionEvent e){
		String cmd = e.getActionCommand();
		if(cmd.equals(SORT))
			inter.sort();
		else if(cmd.equals(SEND))
			inter.send();
		else if(cmd.equals(SAVE))
			inter.save();
	}	
}
